<project basedir="." default="compile-windowing-module" name="jump-impl-windowing">

    <available
        file="com/sun/me/gci/windowsystem/GCIGraphicsEnvironment.class"
        type="file"
        property="gci.classes.available">

        <filepath>
            <pathelement location="${cdc.dir}/basis_classes"/>
            <pathelement location="${cdc.dir}/btclasses"/>
        </filepath>
    </available>

    <target name="make-excludes" unless="gci.classes.available">
        <echo message="WARNING: GCI classes are not available, windowing module will not work!"/>

        <patternset id="excludes">
            <exclude name="**/WindowingIsolateModule.java"/>
        </patternset>
    </target>
    <target name="no-excludes" if="gci.classes.available">
        <patternset id="excludes"/>
    </target>

    <target name="compile-windowing-module" depends="make-excludes,no-excludes">
        <jump.javac srcdir="${s.share.impl.dir}/windowing/classes">
            <include name="com/sun/jumpimpl/**/*.java"/>
            <patternset refid="excludes"/>
        </jump.javac>
    </target>

</project>
